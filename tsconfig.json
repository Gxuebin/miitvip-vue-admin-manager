{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"/@/*": ["example/*"],
			"/@src/*": ["src/*"],
			"/@assets/*": ["example/assets/*"],
			"/@styles/*": ["example/assets/styles/*"],
			"/@images/*": ["example/assets/images/*"],
			"/@fonts/*": ["example/assets/fonts/*"],
			"/@common/*": ["example/common/*"],
			"/@components/*": ["example/components/*"],
			"/@views/*": ["example/views/*"],
			"/@store/*": ["example/store/*"]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules"
	]
}